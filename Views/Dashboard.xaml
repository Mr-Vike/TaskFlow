<Page x:Class="TaskFlow.Views.Dashboard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TaskFlow.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Dashboard">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitons>
            <ColumnDefiniton Width="200"/>
            <ColumnDefiniton Width="*"/>
        </Grid.ColumnDefinitons>

        <StackPanel Background="#2C3E50" Width="200">
            <Button Content="Dashboard" Height="50" Foreground="White" Background="Transparent"/>
            <Button Content="1" Height="50" Foreground="White" Background="Transparent"/>
            <Button Content="2" Height="50" Foreground="White" Background="Transparent"/>
            <Button Content="3" Height="50" Foreground="White" Background="Transparent"/>
        </StackPanel>

        <Grid Grid.Column="1" Background="White">
            <TextBlock Text ="mainPagePlaceHolder" FontSize="24" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Grid> 
      
         

    </Grid>
</Page>
